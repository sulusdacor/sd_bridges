<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--========================= deep water =============================-->

  <TerrainDef>
    <defName>sd_bridges_fakeWaterDeep</defName>
    <label>fake deep water</label>
    <texturePath>Terrain/Surfaces/WaterDeepRamp</texturePath>
    <waterDepthShader>Map/WaterDepth</waterDepthShader>
    <edgeType>Water</edgeType>
    <renderPrecedence>395</renderPrecedence>
	<passability>PassThroughOnly</passability>
    <pathCost>0</pathCost>
    <acceptFilth>false</acceptFilth>
    <fertility>0</fertility>
    <avoidWander>true</avoidWander>
    <changeable>true</changeable> <!-- changed the changeable to true -->
		<holdSnow>false</holdSnow>
	<affordances>
	  <li>Bridgeable</li>
    </affordances>
	<takeSplashes>true</takeSplashes>
    <tags>
      <li>Water</li>
    </tags>
	<tools>
      <li>
        <label>water</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>WaterInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </TerrainDef>
  
